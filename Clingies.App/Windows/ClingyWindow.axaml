<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Clingies.App.Windows.ClingyWindow"
        Width="300"
        Height="200"
        CanResize="True"
        TransparencyLevelHint="AcrylicBlur, Blur, Transparent"
        Background="#FFD100"
        SystemDecorations="None"
        WindowStartupLocation="CenterOwner">

    <Border Background="#FFFA87" CornerRadius="6" Padding="10">
        <StackPanel>
            <TextBox x:Name="ContentBox" AcceptsReturn="True" TextWrapping="Wrap" Height="130"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Close" Margin="5,0,0,0" Click="OnClose"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
