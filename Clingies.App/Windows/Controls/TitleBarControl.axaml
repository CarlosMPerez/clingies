<UserControl 
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Clingies.App.Windows.Controls.TitleBarControl">

  <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1">
    <Grid x:Name="HeaderGrid"
      ColumnDefinitions="24,*,24" 
      Background="#87CEFA" 
      Height="30" 
      PointerPressed="OnHeaderDrag"
      DoubleTapped="OnDoubleTap"
    >
      <Button x:Name="PinButton"
        Grid.Column="0"
        Width="24" Height="24"
        Background="Transparent"
        BorderThickness="0"
        Click="OnPinClick"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Padding="0"
      >
        <Image 
          x:Name="PinButtonImage"
          Source="avares://Clingies.App/Assets/icon-unpinned.png"
          Stretch="Uniform"
          Width="16"
          Height="16" 
        />
      </Button>
      <TextBlock 
        x:Name="TitleText"
        Grid.Column="1"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Foreground="Black"
        FontWeight="Bold"
        TextTrimming="CharacterEllipsis"
      />
      <Button x:Name="CloseButton"
        Grid.Column="2" 
        Background="Transparent"
        BorderThickness="0"
        Click="OnClose"
        HorizontalAlignment="Center" 
        VerticalAlignment="Center"
        Width="24" 
        Height="24" 
        Padding="0"
      >
        <Image 
          Source="avares://Clingies.App/Assets/icon-close.png"
          Stretch="Uniform"
          Width="16"
          Height="16" 
        />
      </Button>
    </Grid>
  </Border>

</UserControl>
