<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Clingies.App.Windows.TitleDialog"
        Width="360"
        Height="100"
        Title="Set title"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ShowInTaskbar="False">

  <Grid RowDefinitions="Auto,*" Margin="12">
    <!-- Dialog Content -->
    <StackPanel Grid.Row="1" Margin="12" Spacing="8">
      <TextBox x:Name="TitleInput"/>
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
        <Button x:Name="OkButton" Width="75" Content="OK"/>
        <Button x:Name="CancelButton" Width="75" Content="Cancel"/>
      </StackPanel>
    </StackPanel>    
  </Grid>
</Window>
